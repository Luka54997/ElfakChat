<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/prof_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/design_default_color_primary"
        android:src="@drawable/profile_image"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_below="@+id/prof_image"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi"
        android:layout_below="@+id/user_name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/friend_request_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_status"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textColor="@color/design_default_color_primary"
        android:background="@drawable/white_rounded_button"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Send Message"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/friend_request_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_request_btn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textColor="@color/design_default_color_primary"
        android:background="@drawable/white_rounded_button"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Cancel chat request"
        android:textAllCaps="false"
        android:visibility="invisible"/>

</RelativeLayout>